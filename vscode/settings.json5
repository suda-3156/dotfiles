{
  // ---------- latex ----------

  "latex-workshop.latex.outDir": "./out",
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.autoClean.run": "onSucceeded",
  "latex-workshop.view.pdf.viewer": "tab",

  "latex-workshop.latex.recipes": [
    {
      name: "latexmk (lualatex)",
      tools: ["lualatexmk"],
    },
  ],
  "latex-workshop.latex.tools": [
    {
      name: "lualatexmk",
      command: "latexmk",
      args: [
        "-synctex=1",
        "-file-line-error",
        "-interaction=nonstopmode",
        "-halt-on-error",
        "-lualatex",
        "-outdir=%OUTDIR%",
        "%DOC%",
      ],
      env: {},
    },
  ],

  // language preferences
  "[tex]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "James-Yu.latex-workshop",
  },

  // formatter (latexindent or tex-fmt)
  // latexindent
  "latex-workshop.formatting.latex": "latexindent",
  "latex-workshop.formatting.latexindent.path": "latexindent",
  "latex-workshop.formatting.latexindent.args": [
    "%TMPFILE%",
    "-c=%DIR%/",
    "-y=defaultIndent: '  '",
  ],
  // tex-fmt (`brew install tex-fmt`)
  // "latex-workshop.formatting.latex": "tex-fmt",
  // "latex-workshop.formatting.latexindent.path": "/opt/homebrew/opt/tex-fmt",

  // linter
  "latex-workshop.linting.chktex.exec.path": "chktex",
  "latex-workshop.linting.lacheck.exec.path": "lacheck",
  "latex-workshop.linting.chktex.exec.args": [
    "-wall",
    "-n22",
    "-n30",
    "-e16",
    "-q",
  ],

  // ---------- terminal, editor ----------

  // Reference: https://github.com/antfu/vscode-file-nesting-config
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    ".env": "*.env, .env.*, .envrc, env.d.ts",
    ".gitignore": ".gitattributes, .gitmodules, .gitmessage, .lfsconfig, .mailmap, .git-blame*",
  },

  "explorer.compactFolders": false,

  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.bracketPairColorization.enabled": true,

  "files.autoSave": "afterDelay",

  "terminal.integrated.suggest.enabled": false,

  "workbench.startupEditor": "none",
  "workbench.secondarySideBar.defaultVisibility": "hidden",

  // ---------- language preferences ----------

  "[c,cpp]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
  },
  "C_Cpp.intelliSenseEngine": "disabled",

  "[go]": {
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "golang.go",
  },
  "go.toolsManagement.autoUpdate": true,

  "[graphql]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "[json]": {
    "editor.tabSize": 2,
  },

  "[markdown]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.terminal.activateEnvironment": false,

  "[shellscript]": {
    "editor.tabSize": 2,
  },

  "[terraform]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "hashicorp.terraform",
  },

  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "biomejs.biome",
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "biomejs.biome",
  },

  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[github-actions-workflow]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  // ---------- copilot ----------
  "github.copilot.enable": {
    "*": false,
    python: true,
  },

  // ---------- extensions ----------
  "cSpell.userWords": [
    "biomejs",
    "chktex",
    "envrc",
    "esbenp",
    "gitmessage",
    "lacheck",
    "latexindent",
    "latexmk",
    "lfsconfig",
    "lualatex",
    "lualatexmk",
    "nonstopmode",
    "synctex",
  ],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/{info,lfs,logs,refs,objects}/**",
    ".git/{index,*refs,*HEAD}",
    ".vscode",
    ".vscode-insiders",
    ".golangci.yaml",
    ".golangci.yml",
  ],

  // ---------- other ----------
  "files.associations": {
    "*.css": "tailwindcss",
    "bun.lock": "json5",
  },

  "makefile.configureOnOpen": true,
}
